{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "useDefineForClassFields": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "src",
      "esModuleInterop": true,

      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
